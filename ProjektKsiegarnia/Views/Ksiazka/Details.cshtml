@model ProjektKsiegarnia.Models.Ksiazka

@{
    ViewBag.Title = "Detale";
    int LoginNr = ProjektKsiegarnia.Models.KlasaDlaSesji.IDuzytkownika;
}

<h2>Szczegóły</h2>

<div>
    <h4>Ksiazka</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.Tytul) </dt>
        <dd> @Html.DisplayFor(model => model.Tytul) </dd>

        <dt> @Html.DisplayNameFor(model => model.Autor) </dt>
        <dd> @Html.DisplayFor(model => model.Autor) </dd>

        <dt> @Html.DisplayNameFor(model => model.ISBN) </dt>
        <dd> @Html.DisplayFor(model => model.ISBN) </dd>

        <dt> @Html.DisplayNameFor(model => model.Cena) </dt>
        <dd> @Html.DisplayFor(model => model.Cena) PLN </dd>

        <dt> @Html.DisplayNameFor(model => model.Recenzja) </dt>
        <dd> @Html.DisplayFor(model => model.Recenzja) </dd>

    </dl>
</div>
<p>
    @if (LoginNr == 0)
    {
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.KsiazkaId })
    @Html.Raw(" | ")
    }
    @Html.ActionLink("Powrót", "Index")
</p>
